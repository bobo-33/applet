/* pages/comment/index.wxss */
/* pages/detail/index.wxss */
@font-face {
  font-family: 'iconfont';  /* project id 479304 */
  src: url('//at.alicdn.com/t/font_479304_t8iux9xen8c9pb9.eot');
  src: url('//at.alicdn.com/t/font_479304_t8iux9xen8c9pb9.eot?#iefix') format('embedded-opentype'),
  url('//at.alicdn.com/t/font_479304_t8iux9xen8c9pb9.woff') format('woff'),
  url('//at.alicdn.com/t/font_479304_t8iux9xen8c9pb9.ttf') format('truetype'),
  url('//at.alicdn.com/t/font_479304_t8iux9xen8c9pb9.svg#iconfont') format('svg');
}
.iconfont::before{font-family:'iconfont';font-style:normal;-webkit-font-smoothing:antialiased;vertical-align: middle;}
.icon-male::before{content: "\e686";color: #66CCFF}
.icon-female::before{content: "\e60d";color:#ff1578}
.icon-write::before{content: "\e6a7";font-size: 18px;color: #999;margin-right: 5px;}
.body{
  margin-bottom: 100px;
}
.row{display: flex;flex-direction: row;justify-content: space-between;align-items: center;}
.line{background-image: linear-gradient(#d8d8d8, #d8d8d8 50%, transparent 50%);background-size: 100% 1px;background-repeat: no-repeat;background-position: bottom;}

.detailContainer{
  padding: 10px 10px 10px 0;
  margin-left: 10px;
  justify-content: flex-start;
}
.imgView{
  width: 34px;
  height: 34px;
  border-radius: 50%;
  margin-right: 10px;
  align-self: flex-start;
}

.textView{
  width: 85%;
}
.h1{font-size: 16px;}
.icon-female,
.icon-male{margin: 0 8px;}
.level{border:1px solid #ccc;font-size:12px;color:#939393;height:15px;line-height:15px;display:inline-block;width:30px;text-align:center;}
.time{color: #939393;font-size: 12px;}
.article{font-size: 14px;margin: 10px 0;}
.footer{width: 100%;position: fixed;bottom: 0;left: 0;z-index: 999;}
.footer .bottom{
  justify-content: center;
  background-color: #fff;
  height:48px;
  line-height:48px;
  background-position:top;
  }

.iptPlaceholder{
  font-size: 14px;
}
.writeComment{
  margin:0 15px;
  height:30px;
  line-height:30px;
  border:1px solid #eaeaea;
  padding:0 5px;
  border-radius:5px;
  width:100%;
}
.writeComment input{
  display: inline-flex;
  vertical-align: middle;
}
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width:90%;
  overflow:hidden;
  position:fixed;
  top:50%;
  left:50%;
  z-index:9999;
  background:#f9f9f9;
  border-radius:36rpx;
  margin-left:-45%;
  margin-top:-115px;


}

.modal-content {
  padding: 50rpx 32rpx;
}

.modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}


.input {
  width: 100%;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 20rpx;
  box-sizing: border-box;
  color: #333;
}

input-holder {
  color: #666;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #ec5300;
  text-align: center;
}