/* pages/message/index.wxss */
.row{display: flex;flex-direction: row;justify-content: space-between;align-items: center;}
.line{background-image: linear-gradient(#d8d8d8, #d8d8d8 50%, transparent 50%);background-size: 100% 1px;background-repeat: no-repeat;background-position: bottom;}

.news{
  margin-bottom: 100px;
}
.news-list{
  justify-content: flex-start;
  padding: 10px 10px 10px 0;
  margin-left: 10px;
}
.imageView{
  align-self: flex-start;
  width: 38px;
  height: 38px;
  border-radius: 50%;
  margin-right: 10px;
}
.textView{
  width: 85%;
}
.article{
  font-size: 14px;
  margin: 10px 0;
}
.time{font-size: 12px;color: #939393;}
.article{
  overflow-x: auto;
}
