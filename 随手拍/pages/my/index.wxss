  url('//at.alicdn.com/t/font_479304_9sd98n64uh7u8fr.woff') format('woff'),
  url('//at.alicdn.com/t/font_479304_9sd98n64uh7u8fr.ttf') format('truetype'),
  url('//at.alicdn.com/t/font_479304_9sd98n64uh7u8fr.svg#iconfont') format('svg');
}
.iconfont {
  font-family:"iconfont" !important;
  font-size:16px;
  font-style:normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-male:before { content: "\e686";margin:0 5px;
 }
.icon-female:before { content: "\e60d";margin:0 5px;
 }
.icon-home::before{content: "\e671"}
.icon-wd::before{content: "\e60b"}
.icon-plus::before{content: "\e601"}
.icon-search::before{content: "\e602"}
.icon-message::before{content: "\e603"}
.icon-right::before{content: "\e612"}

.row{display: flex;flex-direction: row;justify-content: space-between;align-items: center;}
.line{background-image: linear-gradient(#d8d8d8, #d8d8d8 50%, transparent 50%);background-size: 100% 1px;background-repeat: no-repeat;background-position: bottom;}
.space{display:block;width:100%;min-height:12px;background-color:#f8f8f8;background-image:-webkit-linear-gradient(180deg, #ddd, #ddd 50%, transparent 50%);background-image:linear-gradient(180deg, #ddd, #ddd 50%, transparent 50%);background-size:100% 1px;background-repeat:no-repeat;background-position:top;}
page{
  background: #f8f8f8;
}
.body{
  margin-bottom: 100px;
}
.userInfo{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #1DDC91;
  
}
.userImg,.userImg image{
  width: 80px;
  height: 80px;
  border-radius: 50%;
}
.h1{
  margin-top: 10px;
  font-size: 16px;
  color: #fff;
}
.level{font-size:12px;color:#939393;height:15px;line-height:15px;display:inline-block;width:32px;text-align:center;background: #fff;}
.items{background-color:#fff;}
.item-list{
  line-height:45px;
  padding:0 10px;
}

.footer{width: 100%;position: fixed;bottom: 0;left: 0;z-index: 1999;}
.footer .bottom{
  background: #f2f2f2;
  height:48px;
  position: relative;
  }
.home,
.my,
.search,
.message{
    flex-basis: 25%;
    height: 100%;
    text-align: center;
  }
.icon-home::before,
.icon-wd::before,
.icon-search::before,
.icon-message::before{
  font-size: 20px;
  color: #666;
  line-height: 30px;
  display: inline-block;
}
.icon-home::after,
.icon-wd::after,
.icon-search::after,
.icon-message::after{
  display: block;
  font-size :12px;
  line-height: 14px;
}
.icon-home::after{
    content: "首页"
  }
.icon-wd::after{
    content: "我的"
  }
.icon-search::after{
    content: "搜索"
  }
.icon-message::after{
    content: "消息"
  }
.ul,video{
  z-index: 1;
}
.bottom .btn-add{
  position: absolute;
  width: 48px;
  height: 48px;
  line-height: 50px;
  text-align: center;
  background: #1DDC91;
  color: #fff;
  font-size: 14px;
  border-radius: 50%;
  top: -20%;
  left: 50%;
  margin-left: -24px;
}
.bottom .button-hover{
  background: #66CC99;
}
.bottom action-sheet-item{
  display: inline-flex;
  width: 33%;
  align-items: center;
  justify-content: center
}
.bottom .icon-wz::before,
.bottom .icon-tp::before,
.bottom .icon-voice::before,
.bottom .icon-sp::before{
  display: block;
  font-size: 36px;
  color: #666;
  margin-bottom: 10px
}
.bottom .icon-wz::after,
.bottom .icon-tp::after,
.bottom .icon-voice::after,
.bottom .icon-sp::after{
  font-size: 14px;
}
.bottom .icon-tp::before{
  content: "\e606";
}
.bottom .icon-voice::before{
  content: "\e600";
}
.bottom .icon-sp::before{
  content: "\e68c";
}
.bottom .icon-tp::after{
  content: "图片";
}
.bottom .icon-voice::after{
  content: "声音";
}
.bottom .icon-sp::after{
  content: "视频";
}