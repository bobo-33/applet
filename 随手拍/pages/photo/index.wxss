/* pages/photo/index.wxss */
@font-face {
  font-family: 'iconfont';  /* project id 479304 */
  src: url('//at.alicdn.com/t/font_479304_fxaeqmesu4gnl8fr.eot');
  src: url('//at.alicdn.com/t/font_479304_fxaeqmesu4gnl8fr.eot?#iefix') format('embedded-opentype'),
  url('//at.alicdn.com/t/font_479304_fxaeqmesu4gnl8fr.woff') format('woff'),
  url('//at.alicdn.com/t/font_479304_fxaeqmesu4gnl8fr.ttf') format('truetype'),
  url('//at.alicdn.com/t/font_479304_fxaeqmesu4gnl8fr.svg#iconfont') format('svg');
}
.iconfont {
  font-family:"iconfont" !important;
  font-size:16px;
  font-style:normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
.icon-plus:before { content: "\e601";
 }
page{
  background: #f8f8f8;
}
.bg-white{background-color: #fff}
.textTitle{
  margin: 0 15px;
  height: 45px;
  border-bottom:1px dashed #ccc;
}
.textTitle input{
  width: 100%;
  height: 45px;
  line-height: 45px;
}
.iptPlaceholder{
  font-size: 20px;
  color: #ccc;
}
.textBox{
  padding: 15px;
  background: #fff;
  background-image: linear-gradient(#ccc, #ccc 50%, transparent 50%);background-size: 100% 1px;background-repeat: no-repeat;background-position:bottom;
}
textarea{
  width: 100%;
  height: 128px;
}
.textPlaceholder{
  font-size: 14px;
  color: #ccc;
}
.upLoad{
  padding: 15px;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
}
.upLoad image{
  width: 80px;
  height: 80px;
}
.upLoad view{
  width: 80px;
  height: 80px;
  border: 1px solid #ccc;
  line-height: 80px;
  text-align: center;
  font-size: 24px;
  color: #7FC4F2;
  margin: 0 10px 10px 0; 
}
button[type="primary"] {
  margin: 15px;
  background-color:#1DDC91;

}

.footer{width: 100%;position: fixed;bottom: 0;left: 0;z-index: 999;}
.footer .bottom{
  background: #1DDC91;
  color: #fff;
  font-size:18px;
  height:48px;
  line-height:48px;
  text-align: center;
  }
.footer .btn-click{
  background: #1DDC91;
  color: #fff;
  height: 100%;
}
.footer .btn-click::after{
  border: none;
}

